{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "client/dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "types": [
      "node",
      "vite/client",
      "react",
      "react-dom",
      "@capacitor/core",
      "@capacitor/status-bar"
    ]
  }
}
