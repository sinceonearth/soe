{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    /* ðŸ”§ Core settings */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    /* âš¡ React + modern TS */
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,

    /* ðŸ§© Paths + Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },

    /* ðŸš€ Build optimization */
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",

    /* ðŸ§  Type definitions */
    "types": ["node", "vite/client", "react", "react-dom"]
  }
}
